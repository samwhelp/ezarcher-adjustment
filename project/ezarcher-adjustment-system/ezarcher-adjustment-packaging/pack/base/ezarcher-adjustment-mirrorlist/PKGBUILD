

pkgname=ezarcher-adjustment-mirrorlist
pkgver=0.1
pkgrel=1
pkgdesc="XeroLinux Adjustment Mirrorlist"
url="https://github.com/samwhelp/ezarcher-adjustment/tree/main/project/ezarcher-adjustment-system/ezarcher-adjustment-packaging/pack/base/ezarcher-adjustment-mirrorlist"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)


prepare () {

	cp -af ../asset/. "${srcdir}"

}


package () {

	## install mirrorlist
	## /etc/pacman.d/ezarcher-adjustment-mirrorlist
	install -Dm644 "${srcdir}/overlay/etc/pacman.d/${pkgname}" "${pkgdir}/etc/pacman.d/${pkgname}"

}
