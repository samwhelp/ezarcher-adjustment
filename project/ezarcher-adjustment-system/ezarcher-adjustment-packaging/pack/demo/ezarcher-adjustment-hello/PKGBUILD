pkgname=ezarcher-adjustment-hello
pkgver=0.1
pkgrel=1
pkgdesc="XeroLinux Adjustment Hello Script"
url="https://github.com/samwhelp/ezarcher-adjustment/tree/main/project/ezarcher-adjustment-system/ezarcher-adjustment-packaging/pack/demo/ezarcher-adjustment-hello"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)


prepare () {

	echo "## prepare"

	#echo "pwd: $(pwd)"
	#echo "\$srcdir: ${srcdir}"
	#echo "\$pkgdir: ${pkgdir}"
	#return 0

	cp -af ../asset/. "${srcdir}"
	#cp -afv ../asset/. "${srcdir}"
}


package () {

	echo "## package"

	cp -af "${srcdir}/overlay/." "${pkgdir}"
	#cp -afv "${srcdir}/overlay/." "${pkgdir}"

}
