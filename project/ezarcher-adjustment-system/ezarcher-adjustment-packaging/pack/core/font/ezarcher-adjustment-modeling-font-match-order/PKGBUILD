pkgname=ezarcher-adjustment-modeling-font-match-order
pkgver=0.1
pkgrel=1
pkgdesc="Ezarcher Adjustment / Modeling / Font / Match Order"
url="https://github.com/samwhelp/ezarcher-adjustment-packaging/tree/main/pack/core/font/ezarcher-adjustment-modeling-font-match-order"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)


prepare () {

	cp -af ../asset/. "${srcdir}"

}


package () {

	##
	## Main Config
	##

	## user home
	## /etc/skel/.config/fontconfig/conf.d/50-font-match-order.conf
	install -Dm644 "${srcdir}/overlay/etc/skel/.config/fontconfig/conf.d/50-font-match-order.conf" "${pkgdir}/etc/skel/.config/fontconfig/conf.d/50-font-match-order.conf"


	## system dir
	## /etc/fonts/conf.d/51-font-match-order.conf
	install -Dm644 "${srcdir}/overlay/etc/fonts/conf.d/51-font-match-order.conf" "${pkgdir}/etc/fonts/conf.d/51-font-match-order.conf"


}
