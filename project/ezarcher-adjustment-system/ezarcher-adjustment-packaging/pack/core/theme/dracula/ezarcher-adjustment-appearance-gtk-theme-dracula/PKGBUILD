pkgname=ezarcher-adjustment-appearance-gtk-theme-dracula
pkgver=0.1
pkgrel=1
pkgdesc="Ezarcher Adjustment / Appearance / Gtk Theme / Dracula"
url="https://github.com/samwhelp/ezarcher-adjustment-packaging/tree/main/pack/core/theme/dracula/ezarcher-adjustment-appearance-gtk-theme-dracula"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

