prepare () {

	theme_asset_download_gtk_theme_dracula

	return 0

	cp -af ../asset/. "${srcdir}"
}


package () {


	##
	## Path
	##

	#echo "${pkgdir}"
	#echo "${srcdir}"

	#local sys_etc_dir_path="${pkgdir}/etc"
	#local sys_share_dir_path="${pkgdir}/usr/share/${pkgname}"
	#local sys_skel_dir_path="${sys_etc_dir_path}/skel"


	##
	## Prepare Dir
	##

	#mkdir -p "$sys_etc_dir_path"
	#mkdir -p "$sys_share_dir_path"

	install -dm755 "${pkgdir}/usr/share/themes/Dracula"


	##
	## Main Content
	##

	## /usr/share/themes/Dracula
	cp -af "${srcdir}/asset/dracula-gtk-theme/gtk-master/." "${pkgdir}/usr/share/themes/Dracula"


	return 0
}


################################################################################
### Head: theme
##

theme_asset_download_gtk_theme_dracula () {

	##
	## https://draculatheme.com/gtk
	##

	## pwd: "${srcdir}"


	## create dir
	mkdir -p 'asset/dracula-gtk-theme'

	## cd work dir
	cd 'asset/dracula-gtk-theme'

	## download
	wget -c 'https://github.com/dracula/gtk/archive/master.zip'


	## extract
	unzip 'master.zip'


	## back: "${srcdir}"
	##cd ../..
	cd "${OLDPWD}"

}


##
### Tail: theme
################################################################################
