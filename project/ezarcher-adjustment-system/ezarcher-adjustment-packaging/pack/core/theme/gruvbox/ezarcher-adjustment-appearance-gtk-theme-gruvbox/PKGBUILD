pkgname=ezarcher-adjustment-appearance-gtk-theme-gruvbox
pkgver=0.1
pkgrel=1
pkgdesc="Ezarcher Adjustment / Appearance / Gtk Theme / Gruvbox"
url="https://github.com/samwhelp/ezarcher-adjustment-packaging/tree/main/pack/core/theme/gruvbox/ezarcher-adjustment-appearance-gtk-theme-gruvbox"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

##
## ## Source
##
## * https://github.com/archcraft-os/archcraft-themes/tree/main/archcraft-gtk-theme-gruvbox/files/Gruvbox
##
## ## Note
##
## * https://samwhelp.github.io/note-about-manjaro/read/theme/source/gruvbox.html
